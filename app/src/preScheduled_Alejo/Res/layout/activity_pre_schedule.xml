<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Exp_container"
    android:background="@drawable/bgblank"
   >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarNewv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/generalColor"
        app:title=" Visitor's Details"
        app:titleTextColor="#fff"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        >
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!--ImageView
                android:id="@+id/userImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:onClick="getUserImage"
                android:src="@drawable/user" /-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <!--ImageView
                    android:id="@+id/userImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                   android:layout_gravity="center_horizontal"
                    android:src="@drawable/user"/-->
                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Name"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/visitorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"

                    android:inputType="textAutoComplete"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/visitorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"

                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#000" />

                <!--TextView
                    android:id="@+id/EmailPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#8B4F8B"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/userEmailPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"
                    android:hint="Please Enter  Email Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#000" /-->


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/visitorPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"

                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="#000" />


                <TextView
                    android:id="@+id/userAddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/visitorAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000" />


                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"/>

                <Spinner
                    android:id="@+id/spinnerpurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:padding="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/editboxtwo"

                    />

                <LinearLayout
                    android:id="@+id/layoutFromwhere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="From "
                        android:textColor="@color/generalColor"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/fromWherId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbox"
                        android:padding="15dp"
                        android:text=""
                        android:textColor="#000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutcompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textColor="@color/generalColor"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/userCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editbox"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="#000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/MeetingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date (MM-DD-YYYY)"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"/>


                <!--TextView
                    android:id="@+id/MeetingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time (HH:MM)"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"/-->



                <LinearLayout
                    android:id="@+id/layoutItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Item"
                        android:textColor="@color/generalColor"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/Itemid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbox"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text=""
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/deliveryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Delivery/Pick-Up Date"
                        android:textColor="@color/generalColor"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LayoutEventView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/EventView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Name Of Event"
                        android:textColor="@color/generalColor"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/Eventid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbox"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text=""
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/EventdateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Date of Event"
                        android:textColor="@color/generalColor"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>



                 <LinearLayout
                    android:id="@+id/layoutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Timeid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editbox"
                        android:inputType="none"
                        android:padding="10dp"
                        android:onClick="PickTime"
                        android:textColor="#000" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/dateid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editbox"
                        android:inputType="none"
                        android:padding="10dp"
                        android:onClick="PickDate"
                        android:textColor="#000" />
                </LinearLayout>


                <TextView
                    android:id="@+id/EmployeeID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee_Id"
                    android:textColor="@color/generalColor"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/EmployeeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/nextlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="20dp"
                    android:background="@color/generalColor"
                    android:onClick="savedata"
                    android:text="Check In"
                    android:textColor="#fff"
                    />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
