<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bg">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/legalNote"
        android:layout_margin="20dp"
        android:textStyle="bold"
         />


    <com.github.gcacace.signaturepad.views.SignaturePad
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/signturePad"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_weight="0.53"
        app:penColor="#0000FF"

        android:background="@drawable/signaturepad"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Signature"
        android:gravity="center"
        android:textStyle="italic"/>

    <RelativeLayout
        android:id="@+id/SignalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/cancelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="119dp"
            android:layout_marginStart="119dp"
            android:background="@drawable/editbox"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="116dp"
            android:layout_marginEnd="116dp"
            android:background="@drawable/editbox"
            android:textColor="#fff"
            android:onClick="AcceptButton"/>

    </RelativeLayout>


</LinearLayout>
